<!DOCTYPE html>
<html>
  <head>
    <title>CannabisClub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
      <% if current_user %>
        <%= link_to 'My Account', user_path(current_user) %>
        <%= link_to 'Logout', logout_path, method: 'delete'%>
      <% else %>
        <%= link_to 'Login', login_path %>
      <% end %>

      <% if current_admin? %>
        <li><%= link_to "Admin Dashboard", admin_dashboard_path %></li>
        <li><%= link_to "Create New User", new_admin_user_path %></li>
        <li><%= link_to "Edit User Information", edit_admin_user_path(current_user) %></li>
        <li><%= link_to "Create New Strain", new_admin_strain_path %></li>
        <li><%= link_to "Edit Strain Information", edit_admin_strain_path(strain) %></li>
      <% end %>
    <%= yield %>
  </body>
</html>
