<!DOCTYPE html>
<html>

  <head>
    <title>CannabisClub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>


  <body>
    <main class="notice">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>
      <% end %>
   </main>
    <nav class="navbar navbar">
      <div class="container-fluid">
  <div class="navbar-header">
    <a class="navbar-brand" href="#">Colorado Cannabis Club</a>
  </div>
  <ul class="nav navbar-nav">
      <% unless request.env['PATH_INFO'] == '/' %>
      <li class="active"><%= link_to 'Home', dispensaries_path %></li>
          <% if current_user %>
            <li><%= link_to 'My Account', user_path(current_user) %></li>
            <li><%= link_to 'Logout', logout_path, method: :delete%></li>
          <% else %>
            <li><%= link_to 'Login', login_path %></li>
          <% end %>

          <% if current_admin? %>
          <% unless request.env['PATH_INFO'] == '/admin/dashboard' %>
            <li><%= link_to "Admin Dashboard", admin_dashboard_path %></li>
          <% end %>
            <li><%= link_to "Create New User", new_admin_user_path %></li>
            <li><%= link_to "Create New Strain", new_admin_strain_path %></li>
        <% end %>
      <% end %>
      </ul>
    </div>

    <%= yield %>
  </body>

</html>
