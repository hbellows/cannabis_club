<%= form_for(:user, url: login_path, method: :post) do |f| %>
  <div class="field">
    <%= f.text_field :user_name, placeholder: 'Username' %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: 'Password' %>
  </div>
  <div class="actions">
    <%= f.submit("Log In") %>
  </div>
<% end %>
